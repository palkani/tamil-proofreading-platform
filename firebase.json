{
  "hosting": {
    "public": "express-frontend/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "prooftamil-backend",
          "region": "asia-south1"
        }
      },
      {
        "source": "**",
        "run": {
          "serviceId": "prooftamil-frontend",
          "region": "asia-south1"
        }
      }
    ]
  }
}
